<header class="site-header">
  <div class="header-logo">
    <a href="{{ shop.url }}">
      <img src="{{ settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" />
    </a>
  </div>
  <nav class="mega-menu">
    <ul>
      <li>
        <a href="/collections/all">Shop</a>
        <div class="dropdown">
          <div class="dropdown-column">
            <h4>Collections</h4>
            <ul>
              {% for collection in collections %}
                <li><a href="{{ collection.url }}">{{ collection.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
          <div class="dropdown-column">
            <h4>Featured</h4>
            <ul>
              <li><a href="/collections/sale">Sale</a></li>
              <li><a href="/collections/new">New Arrivals</a></li>
            </ul>
          </div>
        </div>
      </li>
      <li><a href="/pages/about">About</a></li>
      <li><a href="/pages/contact">Contact</a></li>
    </ul>
  </nav>
</header>

{% stylesheet %}
  header {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }
  .site-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1rem;
  }
  .header-logo img {
    max-height: 3rem;
  }
  .mega-menu {
    position: relative;
  }
  .mega-menu ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .mega-menu li {
    position: relative;
    padding: 1rem;
  }
  .mega-menu a {
    color: var(--color-foreground);
    text-decoration: none;
  }
  .dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    z-index: 1000;
  }
  .dropdown-column {
    padding: 1rem;
  }
  .dropdown-column h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
  }
  .mega-menu li:hover .dropdown {
    display: block;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
